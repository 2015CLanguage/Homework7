int hcf(int u,int v)
{
    int t,r;
    if(u>v)
    {
        t=u;
	u=v;
	v=t;
    }
    while(r=v%u!=0)
    {
	v=u;
	u=r;
    }
    return(u);
}
int lcd(int u,int v,int h)
{
    return(u*v/h);
